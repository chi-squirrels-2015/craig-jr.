<!DOCTYPE html>
<html>
<head>
  <title>CraigslistJr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!--   <header> -->
  <header>
    <ul id="nav_left">
      <li>
        <%= link_to 'Home', root_path %>
      </li>
    </ul>
    <ul id="nav_right">
      <li>
        <% if current_user %>
        <a class="header_button" href = "/users/<%= current_user.id %>/edit">Account</a>
          <a id="logout" class="header_button" href = "/auth/logout">Logout</a>
        <% else %>
          <a id="login" class="header_button" href="/users/new">Sign Up</a>
          <a id="login" class="header_button" href = "/auth/login">Login</a>
        <% end %>
      </li>
    </ul>
  </header>
  <!-- </header> -->
<%= yield %>

</body>
</html>
